<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".detail.DetailActivity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/back_svgrepo_com"

        android:layout_marginBottom="10dp"
         />/

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="214dp"
        android:layout_gravity="center"
        android:background="@drawable/image_border"
        android:padding="20dp"
        android:src="@drawable/car" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Màu"
            android:textColor="@color/black"
            android:textSize="18sp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/color"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_color"
            android:backgroundTint="@color/black"
            android:layout_marginStart="30dp"
            android:textColor="@color/black" />



    </LinearLayout>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mercedes-Benz EQE Sedan"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="start"
        android:paddingLeft="45dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        />
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="45dp"
        android:orientation="horizontal">

        <!-- ImageView for star -->
        <ImageView
            android:id="@+id/star_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_half_stroke"
            android:layout_marginEnd="4dp"/>


        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8/5"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/countReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:text="(123 Reviews)"

            />
    </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="45dp"
                android:text="Mô tả"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="45dp"
        android:paddingEnd="45dp"
        android:text="The Mercedes-Benz EQE Sedan is a luxury electric vehicle that blends cutting-edge technology with elegant design. View More"
        android:textColor="@color/black"
        android:textSize="14sp"
        />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="45dp"
                android:text="Ảnh"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@drawable/previous_svgrepo_com" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="300dp"

            android:layout_height="150dp"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="40dp"
            android:layout_height="20dp"

            android:background="@drawable/next_svgrepo_com" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="Đánh GIá"
                android:textColor="@color/black"
                android:textSize="20sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/seeMore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="45dp"
                android:text="Xem thêm"
                android:textAlignment="textEnd"
                android:textColor="#0BBDD3"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:orientation="vertical"

                android:background="#CCCCCC"
                android:elevation="2dp"
                >

                <!-- Avatar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile_icon"
                android:layout_gravity="start"
                 />

                <!-- Tên người đánh giá -->
                <TextView
                    android:id="@+id/commentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngo Van A"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />



                </LinearLayout>
                <!-- Đánh giá sao -->
                <RatingBar
                    android:id="@+id/countStar"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_marginTop="2dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="1" />

                <!-- Nội dung đánh giá -->
                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <!-- Số lượt thích -->
                    <Button
                        android:id="@+id/btnLike"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/like_icon"

                         />
                    <TextView
                        android:id="@+id/likeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="123"/>

                    <Button
                        android:id="@+id/btnDislike"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/dislike_icon"

                        />
                    <TextView
                        android:id="@+id/dislikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:background="#000000"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
       >

        <TextView
            android:id="@+id/priceCar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="$123,456"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

            android:textSize="18sp" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/message_icon"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"/>
        <Button
            android:id="@+id/btnCall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/call_icon"
            android:backgroundTint="@color/white"/>

    </LinearLayout>








</LinearLayout>