<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/n_bg_login"

    android:padding="16dp">

    <!-- Nút quay lại -->
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="37dp"
        android:layout_height="28dp"
        android:layout_gravity="start"
        android:src="@drawable/n_svg_back" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="187dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:src="@drawable/n_svg_car_login" />

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="Đăng Ký"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <!-- Nhập họ tên -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Họ và tên"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/n_textbox_login"
        android:hint="Nhập họ tên"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textSize="18dp" />

    <!-- Nhập số điện thoại -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Số điện thoại"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/n_textbox_login"
        android:hint="Nhập số điện thoại"
        android:inputType="number"
        android:paddingStart="20dp"
        android:textSize="18dp" />

    <!-- Nhập mật khẩu -->
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mật Khẩu"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/n_textbox_login"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:textSize="18dp" />

    <!-- Nhập email -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Email"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/n_textbox_login"
        android:hint="Nhập email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:textSize="18dp" />

    <!-- Nút Đăng Ký -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="142dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/n_btn_signin"
        android:text="Đăng Ký"
        android:textStyle="bold" />

    <!-- Liên kết đến trang Đăng Nhập -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bạn đã có tài khoản?"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Đăng Nhập"
            android:textColor="#0010FF"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
